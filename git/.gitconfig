[user]
	name = Ozgur Ozturk
	email = ozgur@nozgurozturk.com
[github]
	user = nozgurozturk
[credential "https://githubv.com"]
	helper = 
	helper = !/usr/local/bin/gh auth git-credential
[gitlab]
 	user = nozgurozturk
[credential "https://gitlab.com"]
	helper = 
	helper = osxkeychain
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = vim
	quotepath = false
	excludesfile = /Users/ozgurozturk/.gitignore
[init]
	defaultBranch = main
[push]
	default = current
[pull]
	rebase = false
[mergetool]
	keepBackup = true
[commit]
	template = ~/.git-commit-template
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status -sb
	br = branch
	co = checkout
	di = diff
	lo = log --graph --decorate --pretty=oneline --abbrev-commit
	loa = log --graph --decorate --pretty=oneline --abbrev-commit --all
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f